<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblRutIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="22dp"
        android:text="RUT:"
        app:layout_constraintBottom_toTopOf="@+id/txtRutIngresar"
        app:layout_constraintStart_toStartOf="@+id/txtRutIngresar"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtRutIngresar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="@string/ingresar_rut"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lblNombreIngresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRutIngresar" />

    <TextView
        android:id="@+id/lblNombreIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="Nombre:"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreIngresar"
        app:layout_constraintStart_toStartOf="@+id/txtNombreIngresar"
        app:layout_constraintTop_toBottomOf="@+id/txtRutIngresar" />

    <EditText
        android:id="@+id/txtNombreIngresar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnMostrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNombreIngresar" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:text="guardar"
        android:onClick="Guardar"
        app:layout_constraintEnd_toStartOf="@+id/btnMostrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreIngresar" />

    <Button
        android:id="@+id/btnMostrar"
        android:layout_width="108dp"
        android:layout_height="63dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="315dp"
        android:text="Mostrar"
        android:onClick="Mostrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGuardar"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreIngresar" />
</androidx.constraintlayout.widget.ConstraintLayout>